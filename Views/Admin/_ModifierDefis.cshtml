@model SAINTJWebApp.Models.Defi

<div class="modal fade" id="modalModifierDefis" tabindex="-1" aria-labelledby="modalModifierDefisLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ModifierDefis" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalModifierDefisLabel">Modification Défis</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="inputDefisId" name="idDefis" />
                    <div class="mb-3">
                        <label asp-for="titre" class="form-label">Titre</label>
                        <input asp-for="titre" class="form-control" id="inputDefisTitre" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="difficulte" class="form-label">Difficulté</label>
                        <select asp-for="difficulte" class="form-select" id="modalDefisDifficulte">
                            <option value="facile">Facile</option>
                            <option value="moyen">Moyen</option>
                            <option value="difficile">Difficile</option>
                            <option value="extreme">Extrême</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
            </form>
        </div>
    </div>
</div>