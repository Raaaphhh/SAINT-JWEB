@model SAINTJWebApp.Models.Defi

@{
    ViewData["Title"] = "Ajout d'un défi";
}

<div class="modal fade" id="modalAjoutDefi" tabindex="-1" aria-labelledby="ajoutDefiModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Ajoutdefis" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="ajoutDefiModalLabel">Nouveau défi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="titre" class="form-label"></label>
                        <input asp-for="titre" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="difficulte" class="form-label"></label>
                        <select asp-for="difficulte" class="form-select">
                            <option value="facile">Facile</option>
                            <option value="moyen">Moyen</option>
                            <option value="difficile">Difficile</option>
                            <option value="extreme">Extrême</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
</div>